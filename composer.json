{
    "name": "ikeraslt/commission-calculator",
    "description": "Bank operations commission calculator",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Ikeraslt\\CommissionCalculator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ikeraslt\\CommissionCalculator\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3",
        "nesbot/carbon": "^2.49"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "2.17"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
